{
	"compilerOptions": {
		"jsx": "react",
		"module": "commonjs",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"outDir": "./build/",
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"target": "es5",
		"baseUrl": ".",
		"skipLibCheck": true,
		"paths": {
			"*": ["node_modules/*", "src/types/*", "src/*"]
		}
	},
	"compileOnSave": true,

	"include": ["src"]
}
